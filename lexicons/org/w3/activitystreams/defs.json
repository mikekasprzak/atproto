{
  "lexicon": 1,
  "id": "org.w3.activitystreams.defs",
  "defs": {
    "anyURIArrayObject": {
      "type": "union",
      "refs": ["#anyURI", "#arrayOfAnyURIObject", "#object"]
    },

    "string": {
      "type": "string",
      "description": "xsd:string | rdf:langString"
    },
    "anyURI": {
      "type": "string",
      "description": "xsd:anyURI",
      "format": "uri"
    },
    "language": {
      "type": "string",
      "description": "[BCP47] Language Tag",
      "format": "language"
    },
    "boolean": {
      "type": "boolean",
      "description": "xsd:boolean"
    },
    "integer": {
      "type": "integer",
      "description": "xsd:integer"
    },
    "nonNegativeInteger": {
      "type": "integer",
      "description": "xsd:nonNegativeInteger",
      "minimum": 0
    },
    "float": {
      "type": "string",
      "description": "xsd:float; Note: Lexicon doesn't support float"
    },
    "nonNegativeFloat": {
      "type": "string",
      "description": "xsd:float [>= 0.0f]; Note: Lexicon doesn't support float"
    },
    "dateTime": {
      "type": "string",
      "description": "xsd:dateTime",
      "format": "datetime"
    },
    "duration": {
      "type": "string",
      "description": "xsd:duration; TODO: this"
    },
    "object": {
      "type": "unknown"
    },

    "arrayOfString": {
      "type": "array",
      "items": {
        "type": "ref",
        "ref": "#string"
      }
    },
    "arrayOfStringObject": {
      "type": "array",
      "items": {
        "type": "union",
        "refs": ["#string", "#object"]
      }
    },
    "arrayOfAnyURIObject": {
      "type": "array",
      "items": {
        "type": "union",
        "refs": ["#anyURI", "#object"]
      }
    }
  }
}
